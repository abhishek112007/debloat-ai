{
  "name": "debloat-ai-electron",
  "version": "1.0.0",
  "description": "Debloat AI - Electron + Python version",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run frontend\" \"npm run electron:dev\" --names \"VITE,ELECTRON\" --prefix-colors \"cyan,magenta\"",
    "frontend": "cd frontend && npm run dev",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "start": "electron .",
    "clean": "rimraf frontend/dist dist"
  },
  "build": {
    "appId": "com.debloatai.app",
    "productName": "Debloat AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend-python/**/*",
      "!backend-python/__pycache__",
      "!backend-python/*.pyc",
      "!backend-python/.env"
    ],
    "extraResources": [
      {
        "from": "backend-python",
        "to": "python",
        "filter": ["**/*", "!__pycache__", "!*.pyc", "!.env"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icons/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icons/icon.png",
      "category": "Utility"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2"
  }
}
